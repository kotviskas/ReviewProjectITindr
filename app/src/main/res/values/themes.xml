<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MobileLab2ITindr" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/pink</item>
        <item name="colorPrimaryVariant">@color/pink</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/bright_pink</item>
        <!-- Customize your theme here. -->
        <!--        <item name="android:windowTranslucentStatus">true</item>-->
<!--        <item name="android:windowLightStatusBar">true</item>-->
        <item name="android:textCursorDrawable">@drawable/ic_text_cursor</item>
        <item name="android:windowBackground">@drawable/bg_splash_screen</item>
    </style>

    <style name="Theme.App.Dialog.FullScreen" parent="Theme.MaterialComponents.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">
            @anim/enter_slide_up
        </item>
        <item name="android:windowExitAnimation">
            @anim/exit_slide_down
        </item>
    </style>

    <style name="Widget.MaterialComponents.Toolbar.MyToolbar">
        <item name="android:background">@color/white</item>
        <item name="android:elevation">4dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="titleTextAppearance">
            @style/Base.Widget.MaterialComponents.TextView.BoldText.SubTitle
        </item>
        <item name="titleTextColor">@color/pink</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="Widget.MaterialComponents.Toolbar.MyToolbar.WithBackButton">
        <item name="titleMarginStart">32dp</item>
    </style>

    <style name="Widget.MaterialComponents.Button.MyButton">
        <item name="android:elevation">2dp</item>
        <item name="fontFamily">@font/montserrat_bold_700</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:paddingVertical">18dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">16sp</item>
        <item name="cornerRadius">28dp</item>
    </style>

    <!--  IconButton  -->
    <style name="Widget.MaterialComponents.Button.MyButton.MyIconButton">
        <item name="iconTint">@null</item>
        <item name="iconPadding">16dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">32dp</item>
    </style>

    <style name="Widget.MaterialComponents.Button.MyButton.MyIconButton.White">
        <item name="android:textColor">@color/pink</item>
        <item name="backgroundTint">@color/white</item>
    </style>

    <style name="Widget.MaterialComponents.Button.MyButton.MyIconButton.Pink">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/pink</item>
    </style>
    <!--    -->

    <style name="Widget.MaterialComponents.Button.MyButton.White">
        <item name="android:textColor">@color/pink</item>
        <item name="backgroundTint">@color/white</item>
    </style>

    <style name="Widget.MaterialComponents.Button.MyButton.White.Back">
        <item name="android:text">@string/button_back</item>
    </style>

    <style name="Widget.MaterialComponents.Button.MyButton.Pink">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/bg_button_gradient</item>
    </style>

    <style name="Widget.MaterialComponents.Button.MyButton.Pink.Register">
        <item name="android:text">@string/button_sign_up</item>
    </style>

    <style name="Widget.MaterialComponents.Button.MyButton.Pink.Save">
        <item name="android:text">@string/button_save</item>
    </style>

    <style name="Base.Widget.MaterialComponents.TextView.BoldText">
        <item name="fontFamily">@font/montserrat_bold_700</item>
    </style>

    <style name="Base.Widget.MaterialComponents.TextView.RegularText">
        <item name="fontFamily">@font/montserrat_regular_400</item>
    </style>

    <!-- Bold -->
    <style name="Base.Widget.MaterialComponents.TextView.BoldText.Title">
        <item name="android:textSize">24sp</item>
        <item name="lineHeight">29dp</item>
    </style>

    <style name="Base.Widget.MaterialComponents.TextView.BoldText.SubTitle">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Base.Widget.MaterialComponents.TextView.BoldText.Description">
        <item name="android:textSize">16sp</item>
        <item name="lineHeight">20dp</item>
    </style>
    <!--    -->

    <!-- Regular -->
    <style name="Base.Widget.MaterialComponents.TextView.RegularText.Title">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Base.Widget.MaterialComponents.TextView.RegularText.SubTitle">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Base.Widget.MaterialComponents.TextView.RegularText.Description">
        <item name="android:textSize">16sp</item>
        <item name="lineHeight">20dp</item>
    </style>
    <!--    -->

    <!--  Pink  -->
    <style name="Base.Widget.MaterialComponents.TextView.BoldText.Title.Pink">
        <item name="android:textColor">@color/pink</item>
    </style>

    <style name="Base.Widget.MaterialComponents.TextView.BoldText.Description.Pink">
        <item name="android:textColor">@color/pink</item>
    </style>
    <!--    -->

    <!--  Black  -->
    <style name="Base.Widget.MaterialComponents.TextView.BoldText.Title.Black">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Base.Widget.MaterialComponents.TextView.BoldText.Description.Black">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Base.Widget.MaterialComponents.TextView.RegularText.Description.Black">
        <item name="android:textColor">@color/black</item>
    </style>
    <!--    -->

    <!--  Message  -->
    <style name="Base.Widget.MaterialComponents.TextView.RegularText.MessageData">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/hint_color</item>
        <item name="lineHeight">16dp</item>
        <item name="android:letterSpacing">-0.022</item>
        <item name="android:maxWidth">260dp</item>
    </style>

    <style name="Base.Widget.MaterialComponents.TextView.RegularText.Description.Black.MessageText">
        <item name="android:maxWidth">228dp</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="MessageImage">
        <item name="android:background">@drawable/bg_message_image</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:maxWidth">228dp</item>
        <item name="android:maxHeight">228dp</item>
    </style>
    <!--  -->

    <style name="Widget.Design.TextInputEditText.MyTextInput">
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="hintEnabled">false</item>
    </style>

    <style name="Widget.Design.TextInputEditText.MyTextInput.Password">
        <item name="passwordToggleEnabled">true</item>
        <item name="passwordToggleTint">@color/pink</item>
    </style>

    <style name="Base.Widget.MaterialComponents.TextView.RegularText.Description.Black.MyTextInputEditText">
        <item name="android:background">@drawable/bg_edit_text</item>
        <item name="android:paddingVertical">18dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColorHint">@color/hint_color</item>
    </style>

    <style name="Base.Widget.MaterialComponents.TextView.RegularText.Description.Black.MyTextInputEditText.EmailAddress">
        <item name="android:hint">@string/edit_text_email</item>
        <item name="android:inputType">textEmailAddress</item>
    </style>

    <style name="Base.Widget.MaterialComponents.TextView.RegularText.Description.Black.MyTextInputEditText.Password">
        <item name="android:hint">@string/edit_text_password</item>
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="Widget.MaterialComponents.Button.OutlinedButton.TextButton">
        <item name="fontFamily">@font/montserrat_bold_700</item>
        <item name="android:textColor">@color/pink</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:padding">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="lineHeight">20dp</item>
        <item name="backgroundTint">#00000000</item>
        <item name="strokeWidth">0dp</item>
        <item name="android:inset">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="MyChip">
        <item name="android:checkable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="chipMinTouchTargetSize">0dp</item>
        <item name="android:paddingVertical">4dp</item>
        <item name="chipStartPadding">8dp</item>
        <item name="chipEndPadding">8dp</item>
        <item name="textStartPadding">0dp</item>
        <item name="textEndPadding">0dp</item>
        <item name="android:textAlignment">center</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipStrokeColor">@color/pink</item>
        <item name="android:textColor">@color/text_chip_selector</item>
        <item name="android:backgroundTint">@color/bg_chip_selector</item>
        <item name="android:textAppearance">@style/DefaultChipTextAppearance</item>
    </style>

    <style name="DefaultChipTextAppearance" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:fontFamily">@font/montserrat_regular_400</item>
    </style>

    <style name="Widget.MaterialComponents.ShapeableImageView.AvatarPlaceHolder">
        <item name="android:background">@drawable/bg_rounded_avatar</item>
        <item name="srcCompat">@drawable/ic_default_avatar</item>
        <item name="android:scaleType">centerCrop</item>
    </style>
</resources>